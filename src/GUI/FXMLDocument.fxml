<?import javafx.scene.control.Slider?>
<AnchorPane id="AnchorPane" prefHeight="300" prefWidth="800" style="-fx-background-color: grey;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.FXMLDocumentController">
    <children>

        <Label layoutX="5" layoutY="5" text="Choose file *.wav " textFill="#fcfcfc" />
